<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag asset_path('favicon.png') %>
    <title>Task Bunny</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <script type="text/javascript">
      window.staticImages = {
        tasker_pic: "<%= image_path("bunny.png") %>",
        logo: "<%= image_path("logo.png") %>",
        moving_pic: "<%= image_path("moving_picture.jpg") %>",
        furniture_pic: "<%= image_path("furniture_image.jpg") %>",
        mounting_pic: "<%= image_path("mounting_picture.jpg") %>",
      }
    </script>
    <%= yield %>
  </body>
</html>
